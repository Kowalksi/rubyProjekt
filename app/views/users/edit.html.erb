<h1>Benutzer bearbeiten</h1>

<%= form_for @user do |f| %>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.email_field :email %>
  </div>

  <div class="field">
    <%= f.label :role %><br>
    <%= f.select :role, options_for_select([['user', 'user'], ['admin', 'admin']], selected: @user.role) %>
  </div>

  <div class="actions">
    <%= f.submit "Speichern" %>
  </div>
<% end %>

